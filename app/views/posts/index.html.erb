
<div class = "index-container">
    <ul>
      <% @posts.each do |post| %>
  <div class = "list-item">
        <li>
          <h3 class = "title-index-page"><%= link_to post.title, post_path(post) %></h3>
          <p class = "body-index-page"><%= link_to post.body, post_path(post) %></p>

        </li>
</div>
      <% end%>
    </ul>
</div>